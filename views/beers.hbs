            <img class="card-img-top" src={{image_url}} alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">{{name}}</h5>
                <p class="card-text">{{description}}</p>
                <a href="#" class="btn btn-primary">{{tagline}}</a>
            </div>
        </div>
    </div>
</div>

{{/each}}